# Environment Configuration Template
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to git (it's in .gitignore)

# ============================================
# Application Configuration
# ============================================

# Application port (default: 8080)
APP_PORT=8080

# Application name
APP_NAME=graphql-profile

# Environment (development, staging, production)
ENVIRONMENT=development

# ============================================
# Docker Configuration
# ============================================

# Docker image name
DOCKER_IMAGE_NAME=graphql-profile

# Docker container name
DOCKER_CONTAINER_NAME=graphql-profile-app

# Docker network name (for docker-compose)
DOCKER_NETWORK=graphql-profile-network

# ============================================
# GraphQL API Configuration
# ============================================

# GraphQL API domain
GRAPHQL_DOMAIN=https://platform.zone01.gr

# CORS proxy URL (if needed)
CORS_PROXY=https://corsproxy.io

# Use CORS proxy (true/false)
USE_CORS_PROXY=true

# ============================================
# Security Configuration
# ============================================

# JWT token storage key (for localStorage)
TOKEN_STORAGE_KEY=graphql_profile_token

# User ID storage key (for localStorage)
USER_ID_STORAGE_KEY=graphql_profile_user_id

# ============================================
# Nginx Configuration (if customizing)
# ============================================

# Nginx server name
NGINX_SERVER_NAME=localhost

# Enable gzip compression (true/false)
NGINX_GZIP=true

# ============================================
# Deployment Configuration
# ============================================

# Deployment target (local, staging, production)
DEPLOYMENT_TARGET=local

# Health check URL
HEALTH_CHECK_URL=http://localhost:8080
